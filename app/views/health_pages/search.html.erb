<div class="search">

<h3>Search Health Topics of your choice.</h3>

<%= form_tag(search_path, method: "get") do %>
<%= label_tag(:search, "What topic would you like to know about?") %><br>
<%= text_field_tag(:search) %><%= submit_tag "Search", class: 'form_button', data: { disable_with: "Loading Results..." }  %> <br><br>
<% end %>

<div class="results animated fadeInUp">

<%= render "results" %>

</div>
</div>
