<div class="posts">
<h2>Steam Vents</h2>
<% if @posts == nil %>
<p>No posts yet!</p>
<% else %>
<% @posts.reverse.each do |po| %>
<div class="onePost">
Vented by: <%= po.owner %> <br> <%= po.content %> <br>
<% if logged_in? && current_user.username == po.owner %>
<%= link_to "Delete Post", post_path(po.id), :method=> :delete, data: {confirm: 'Delete Post?', remote: true},  class: "terminate" %>
<% end %>
</div>
<% end %>
</div>
<% end %>
